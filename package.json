{
  "name": "workflow-app",
  "version": "1.0.0",
  "description": "Workflow management application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "electron": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": ["workflow", "management", "electron"],
  "author": "Workflow Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.workflow.app",
    "productName": "Workflow",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "python_api.py",
      "workflow.py",
      "web/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
